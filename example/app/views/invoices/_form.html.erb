        <%= f_line_items.text_field :name %>
      </div>
      <div class="field">
        <%= f_line_items.label :price %><br>
        <%= f_line_items.text_field :price %>
      </div>
      <div class="field">
        <%= f_line_items.label :quantity %><br>
        <%= f_line_items.text_field :quantity %>
      </div>
    </fieldset>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
